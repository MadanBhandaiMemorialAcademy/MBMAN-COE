# Security
DEBUG=True
SECRET_KEY=django-insecure-change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost,https://yourdomain.com

# Database
# Use sqlite:///db.sqlite3 for local SQLite
# Use mysql://user:password@host:port/dbname for MySQL
# Use postgres://user:password@host:port/dbname for PostgreSQL
DATABASE_URL=sqlite:///db.sqlite3

# Cloudinary (Leave empty to use local storage)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Or use the single URL
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
